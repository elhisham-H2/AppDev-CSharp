<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumberGuesser.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="30">
            <Label
                x:Name="Question"
                Text="Guess what the number is between 1-100: "
                TextColor="White"
                FontSize="Medium"
                HorizontalOptions="Center" />
            <Entry
                x:Name="GuessEntry"
                Placeholder="Enter your guess"
                Keyboard="Numeric"
                HorizontalOptions="Fill" />

            <Button
                Text="Submit Guess"
                Clicked="OnGuessSubmitted"
                HorizontalOptions="Fill" />

            <Label
                x:Name="GuessFeedback"
                Text=""
                TextColor="DarkGreen"
                FontSize="Medium"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
